<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ray.jachegou.RedefinirSenha"
    android:orientation="vertical"
    android:padding="5dp">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/naolembrosenhaicn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual serÃ¡ minha senha ???"
        android:id="@+id/tv1"
        android:layout_marginTop="35dp"
        android:textSize="25dp"
        android:textColor="@color/corTextViewUm"/>

    <EditText
        android:layout_marginTop="12dp"
        android:id="@+id/editTextEmailRedefinir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Coloque Seu E-mail"
        android:imeActionId="@+id/login"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/corTextViewUm"
        android:textColorHint="@color/corTextViewUm"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btnRedefinirSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Redefinir"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:background="#2fabe5" />

</LinearLayout>
