<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ray.jachegou.CadastroUsuarioActivity"
    android:background="@color/corFundo">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/corFundo"
    android:padding="5dp">
    <TextView
        android:id="@+id/nomeProdutoInf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/corTextViewUm"
        android:textSize="32dp"
        android:text="Descrição Produto"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="Timer new Rome"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5sp"
        android:id="@+id/teste"
        android:layout_margin="0dp">
        <ImageView
            android:id="@+id/imagemViewInf"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:src="@drawable/img1"
            android:padding="0dp"
            android:layout_margin="0dp"/>

        <TextView
            android:id="@+id/valorInf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/corTextViewUm"
            android:textSize="45dp"
            android:text="R$ 10,50"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="Timer new Rome"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="INGREDIENTES"
            android:textColor="@color/corTextViewUm"
            android:textSize="26dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="Timer new Rome"/>
        <TextView
            android:id="@+id/txtIngredientes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/corTextViewUm"
            android:textSize="18dp"
            android:text="Ingredientes"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="Timer new Rome"
            android:padding="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/btnDiminuir"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="Timer new Rome"
            android:background="@color/corBotoes"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/qtsPedido"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="32dp"
            android:textStyle="bold"
            android:fontFamily="Timer new Rome"
            android:textAlignment="center"
            android:textColor="@color/corTextViewUm"/>

        <Button
            android:id="@+id/btnAumentar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="Timer new Rome"
            android:background="@color/corBotoes"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar ao Pedido"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:background="@color/corBotoes"
        android:id="@+id/btnContinuar"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Fechar Pedido"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:background="@color/corBotoes"
        android:id="@+id/btnFechar"
        android:layout_marginBottom="10dp"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:background="@color/corBotoes"
        android:id="@+id/btnCancelar"
        android:layout_marginBottom="10dp"/>
</LinearLayout>
</ScrollView>